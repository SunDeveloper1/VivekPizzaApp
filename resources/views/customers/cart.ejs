<section class="cart bg-rose-100">

<% if(session.cart) { %>
    <div class="order container mx-auto w-1/2 py-16">
        <div class="bg-gr       ay-200 flex items-center border-b border-gray-500 ">
            <img class="" src="./img/cart-black.png" alt="order-summary image">
            <h3 class="ml-4 text-black text-4xl font-extrabold">Order Summary</h3>
        </div>
<% for(let pizza of Object.values(session.cart.items)) {%>
        <div class="pizza-list mt-5">
            <div class=" flex items-center">
                <img class="w-24" src=<%= pizza.item.img %> >
                <div class="flex-1 ml-4">
                    <h1 class="text-xl font-bold"><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%=pizza.qty %></span>
                <span class="font-bold text-lg">â‚¹<%= pizza.item.price * pizza.qty %></span>
            </div>
        </div>
  <% } %>      
            <hr>
            <div class="billing  py-4">
                <div class=" total  flex ">
                    <span class="text-3xl font-bold">Total :</span>
                    <span class="ml-4 text-3xl font-bold text-orange-500">â‚¹<%= session.cart.totalPrice %></span>
                </div>
            </div>
            <div class="form mt-6">
                <form action='/order' method='POST'>
                    <input name="address"
                        class="p-2 w-1/2 bg-slate-50 focus:outline-none focus:border-orange-500 focus:border-2 rounded-lg text-black font-extrabold text-lg border shadow"
                        type="text" placeholder="Enter your Address" />
                    <input name="number"
                        class="mt-4 p-2 w-1/2 bg-slate-50 focus:outline-none focus:border-orange-500 focus:border-2 rounded-lg text-black font-extrabold text-lg border shadow"
                        type="number" placeholder="Phone Number" />
                    <div>
                        <button
                            class=" mt-4 text-black  text-lg py-2 px-6 border-2 hover:bg-green-700 bg-orange-600 text-white rounded-full font-bold transition-all ease-in-out"
                            type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <!-- <div class="login-to-continue">
            <button class=" mt-4 text-black  text-lg py-2 px-6 border-2 hover:bg-green-700 bg-orange-600 text-white rounded-full font-bold transition-all ease-in-out"type="submit">Login to Continue</button>
        </div> -->

    </div>
<%} else{%>
    <div class="container mx-auto text-center py-3">
        <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜¢</h1>
        <p class="text-gray-500 text-lg">You haven't order any pizza yet, To order
            Pizza navigate to Home Page
        </p>
        <img class="w-1/3 mx-auto"src="./img/emptycart.jpg" alt="empty-cart">
        <a class="inline-block px-6 py-2 border-2 border-orange-600 hover:bg-orange-600 rounded-full font-bold transition-all ease-in-out text-black hover:text-white mb-4 " href="/">Go back</a>
    </div>
<% } %>  
</section>
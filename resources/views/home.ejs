

<section class="hero">
    <div class="container mx-auto flex items-center justify-between py-16 mx-4">
        <div class="w-1/2 ml-10">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="logo text-6xl  font-extrabold ">Don't Wait</h1>
            <button class="px-6 py-2 rounded-full mt-5 text-black border-2 border-green-900 text-xl font-bold font-mono hover:bg-green-500">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="./img/mainPizza.jpg"  alt="Pizza Imgage">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-4xl logo font-bold mb-8"> All Pizzas</h1>
    <div class="grid grid-cols-4 gap-x-12 gap-y-16">
        <% pizzas.forEach((pizza)=>{ %>
            <div class="w-64 hover:shadow-purple-600 hover:shadow-2xl rounded-lg px-2 py-2">
                <img class="h-40 mb-4 mx-auto object-cover" src=<%= pizza.img %>>
                <div>
                    <h2 class="mb-4 text-lg"><%=pizza.name %></h2>
                    <span class="py-1 px-4 rounded-full font-normal uppercase text-xs bg-slate-300"><%=pizza.size %></span>
                    <div class="flex items-center justify-around">
                        <span class="font-bold text-lg ">â‚¹<%=pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart ml-4 py-1 px-6 border-2 border-orange-600 hover:bg-orange-500 rounded-full font-bold transition-all ease-in-out"><span>+</span><span>Add</span></button>
                    </div>
                </div>
            </div>
       <%  }) %>
        
      
    </div>
  
</section>
</body>
</html>